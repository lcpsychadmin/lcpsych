{
  "name": "lcpsych",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev:css": "tailwindcss -i ./assets/styles/tailwind.css -o ./static/css/site.css --watch",
    "build:css": "tailwindcss -i ./assets/styles/tailwind.css -o ./static/css/site.css --minify",
    "build:js": "esbuild assets/js/editor.js --bundle --minify --outfile=static/js/editor.bundle.js",
    "dev:js": "esbuild assets/js/editor.js --bundle --sourcemap --watch --outfile=static/js/editor.bundle.js",
    "heroku-postbuild": "npm run build:css && npm run build:js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.23.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tiptap/core": "^2.8.0",
    "@tiptap/extension-color": "^2.8.0",
    "@tiptap/extension-link": "^2.8.0",
    "@tiptap/extension-text-align": "^2.8.0",
    "@tiptap/extension-text-style": "^2.8.0",
    "@tiptap/extension-underline": "^2.8.0",
    "@tiptap/extension-placeholder": "^2.8.0",
    "@tiptap/starter-kit": "^2.8.0"
  }
}
